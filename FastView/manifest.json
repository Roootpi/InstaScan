{
    "manifest_version": 3,
    "name": "FastView",
    "version": "1.0.0",
    "description": "An extension that put a button next to the YouTube video to summarize video.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://www.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["app.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icon.webp",
      "48": "icon.webp",
      "64": "icon.webp",
      "128": "icon.webp"
    },
    "action": {
      "default_title": "FastView",
      "default_icon": {
        "16": "icon.webp",
        "48": "icon.webp",
        "64": "icon.webp",
        "128": "icon.webp"
      }
    }
}


